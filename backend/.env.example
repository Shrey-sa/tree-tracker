# Django
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=*

# Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=treetracker
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis & Celery
REDIS_URL=redis://localhost:6379/0

# ── Email via AWS SES ──────────────────────────────
# Step 1: Set backend to SMTP
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Step 2: SES SMTP endpoint for your region
# ap-south-1 (Mumbai): email-smtp.ap-south-1.amazonaws.com
# us-east-1 (N. Virginia): email-smtp.us-east-1.amazonaws.com
EMAIL_HOST=email-smtp.ap-south-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Step 3: From SES Console → SMTP Settings → Create SMTP credentials
EMAIL_HOST_USER=YOUR_SES_SMTP_USERNAME
EMAIL_HOST_PASSWORD=YOUR_SES_SMTP_PASSWORD

# Step 4: Must be a verified email/domain in SES
DEFAULT_FROM_EMAIL=TreeTracker <your-verified@email.com>

# Step 5: Alerts go to this address (supervisor/admin emails)
ALERT_EMAIL=your-verified@email.com

# AWS S3 (optional)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_STORAGE_BUCKET_NAME=treetracker-media
# AWS_S3_REGION_NAME=ap-south-1

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
